<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/bill_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/print_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/print"
        app:layout_constraintTop_toBottomOf="@id/bill_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_bill"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/edit_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/print_preview"
        app:layout_constraintTop_toBottomOf="@id/bill_preview"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/edit_bill"
        android:textAllCaps="false"
        />


</androidx.constraintlayout.widget.ConstraintLayout>